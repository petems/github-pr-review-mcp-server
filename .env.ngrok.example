# OAuth Configuration for ngrok dedicated domain
# Copy this file to .env.ngrok and fill in your actual values

# Server Configuration
MCP_MODE=http
MCP_HOST=0.0.0.0
MCP_PORT=8080
MCP_SECRET_KEY=
MCP_ADMIN_TOKEN=

# OAuth Configuration
GITHUB_OAUTH_ENABLED=true
GITHUB_OAUTH_CLIENT_ID=
GITHUB_OAUTH_CLIENT_SECRET=
GITHUB_OAUTH_CALLBACK_URL=https://your-domain.ngrok.io/auth/callback
GITHUB_OAUTH_SCOPES=repo,read:user

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# CORS
CORS_ENABLED=true
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
